<link wikidata="Q5463" start="3360" end="3375" title="Rocky Mountains" label="Rocky Mountains"/>
<link wikidata="Q1221" start="3379" end="3384" title="Idaho" label="Idaho"/>
<link wikidata="Q6177126" start="3431" end="3446" title="Jemez Mountains" label="Jemez Mountains"/>
<link wikidata="Q1522" start="3450" end="3460" title="New Mexico" label="New Mexico"/>
<link wikidata="Q908437" start="3532" end="3545" title="specific name (zoology)" label="specific name"/>
<link wikidata="Q222751" start="3553" end="3562" title="Nota bene" label="Nota bene"/>
