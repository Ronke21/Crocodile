<link wikidata="Q19020" start="7975" end="7988" title="Academy Awards" label="Academy Award"/>
<link wikidata="Q102427" start="8010" end="8022" title="Academy Award for Best Picture" label="Best Picture"/>
<link wikidata="Q103360" start="8024" end="8037" title="Academy Award for Best Director" label="Best Director"/>
