<link wikidata="Q3362265" start="18998" end="18999" title="Scientific pitch notation" label="D"/>
<link wikidata="Q159998" start="19895" end="19902" title="bassoon" label="bassoon"/>
<link wikidata="Q83513" start="19908" end="19921" title="contrabassoon" label="contrabassoon"/>
<link wikidata="Q12539" start="20455" end="20472" title="the Enlightenment" label="the Enlightenment"/>
<link wikidata="Q217295" start="22160" end="22164" title="Mass (music)" label="Mass"/>
