<link wikidata="Q209815" start="215" end="229" title="oral tradition" label="oral tradition"/>
<link wikidata="Q7368" start="336" end="341" title="sheep" label="sheep"/>
<link wikidata="Q6145568" start="920" end="941" title="James William Elliott" label="James William Elliott"/>
<link wikidata="Q181598" start="2195" end="2204" title="King Lear" label="King Lear"/>
