<link wikidata="Q11650" start="55" end="66" title="electronics" label="electronics"/>
<link wikidata="Q173114" start="68" end="73" title="Digital audio" label="audio"/>
<link wikidata="Q418" start="78" end="96" title="telecommunications" label="telecommunications"/>
<link wikidata="Q25250" start="360" end="364" title="volt" label="volt"/>
<link wikidata="Q211554" start="389" end="398" title="amplifier" label="amplifier"/>
<link wikidata="Q43260" start="698" end="708" title="polynomial" label="polynomial"/>
<link wikidata="Q131187" start="712" end="725" title="Taylor series" label="Taylor series"/>
<link wikidata="Q13647261" start="1037" end="1041" title="sine" label="sine"/>
<link wikidata="Q1148098" start="1227" end="1235" title="harmonic" label="harmonic"/>
<link wikidata="Q1357187" start="1556" end="1571" title="frequency mixer" label="frequency mixer"/>
