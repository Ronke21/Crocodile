<link wikidata="Q206799" start="87" end="104" title="electrical energy" label="electrical energy"/>
<link wikidata="Q423488" start="155" end="163" title="actuator" label="actuator"/>
<link wikidata="Q184996" start="412" end="422" title="dielectric" label="dielectric"/>
