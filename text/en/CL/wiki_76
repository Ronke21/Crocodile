<link wikidata="Q1022867" start="181" end="193" title="minor planet" label="minor planet"/>
<link wikidata="None" start="237" end="252" title="5379 Abehiroshi" label="5379 Abehiroshi"/>
<link wikidata="Q539152" start="268" end="283" title="Osamu Muramatsu" label="Osamu Muramatsu"/>
