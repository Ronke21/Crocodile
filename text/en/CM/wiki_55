<link wikidata="Q3506464" start="0" end="10" title="Swattenden" label="Swattenden"/>
<link wikidata="Q2160826" start="50" end="76" title="Cranbrook, Kent" label="Cranbrook and Sissinghurst"/>
<link wikidata="Q5674846" start="148" end="155" title="Hartley, Cranbrook" label="Hartley"/>
<link wikidata="Q5757411" start="405" end="418" title="Angley School" label="Angley School"/>
</links>
