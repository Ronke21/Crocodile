<link wikidata="Q448555" start="5276" end="5292" title="Wenceslas Hollar" label="Wenceslas Hollar"/>
<link wikidata="Q81506" start="5466" end="5475" title="Charles I of England" label="Charles I"/>
<link wikidata="Q75601836" start="5643" end="5656" title="John Matthews (physician)" label="John Matthews"/>
<link wikidata="Q35749" start="5872" end="5882" title="parliament" label="parliament"/>
<link wikidata="Q191050" start="5931" end="5945" title="Ambrose Bierce" label="Ambrose Bierce"/>
