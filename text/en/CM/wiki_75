<link wikidata="Q6217926" start="5082" end="5094" title="John A. Ryan" label="John A. Ryan"/>
<link wikidata="Q181249" start="5097" end="5113" title="Charles Coughlin" label="Charles Coughlin"/>
<link wikidata="Q182121" start="5116" end="5130" title="Anti-Communism" label="Anti-Communism"/>
