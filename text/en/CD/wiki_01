<link wikidata="Q1757105" start="4508" end="4517" title="statocyst" label="statocyst"/>
<link wikidata="Q7243545" start="4589" end="4598" title="Primitive (phylogenetics)" label="ancestral"/>
<link wikidata="Q1364287" start="4612" end="4618" title="ocellus" label="ocelli"/>
<link wikidata="Q303479" start="4678" end="4691" title="hermaphrodite" label="hermaphrodite"/>
<link wikidata="Q213456" start="4706" end="4711" title="gonad" label="gonad"/>
