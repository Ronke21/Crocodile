<link wikidata="Q6186" start="356" end="365" title="communist" label="communist"/>
<link wikidata="Q10704" start="602" end="610" title="Tórshavn" label="Tórshavn"/>
<link wikidata="Q1811131" start="651" end="668" title="Oyggjaframi (M-L)" label="Oyggjaframi (M-L)"/>
