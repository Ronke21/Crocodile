<link wikidata="Q164597" start="76" end="85" title="Left-wing politics" label="left-wing"/>
<link wikidata="Q7278" start="86" end="101" title="political party" label="political party"/>
<link wikidata="Q223179" start="113" end="120" title="Faroese people" label="Faroese"/>
