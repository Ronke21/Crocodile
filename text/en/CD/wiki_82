<link wikidata="Q3262595" start="283" end="299" title="signalling (economics)" label="signaling theory"/>
<link wikidata="Q201251" start="735" end="742" title="peacock" label="peacock"/>
<link wikidata="Q420" start="990" end="997" title="biology" label="biology"/>
<link wikidata="Q1428558" start="1020" end="1038" title="handicap principle" label="handicap principle"/>
<link wikidata="Q1898394" start="1154" end="1163" title="new money" label="new money"/>
