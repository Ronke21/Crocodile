<link wikidata="Q10858400" start="74" end="84" title="political corruption" label="corruption"/>
<link wikidata="Q218" start="106" end="113" title="Romania" label="Romania"/>
<link wikidata="Q174240" start="210" end="236" title="Transparency International" label="Transparency International"/>
<link wikidata="Q458" start="261" end="275" title="European Union" label="European Union"/>
<link wikidata="Q842794" start="354" end="369" title="Communist Romania" label="Communist times"/>
</links>
