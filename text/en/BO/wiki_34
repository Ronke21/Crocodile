<link wikidata="Q1757223" start="4308" end="4317" title="Stage monitor system" label="foldbacks"/>
<link wikidata="Q1470095" start="4321" end="4335" title="front of house" label="front-of-house"/>
<link wikidata="Q390516" start="4535" end="4547" title="control room" label="control room"/>
