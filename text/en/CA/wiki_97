<link wikidata="Q936439" start="3913" end="3928" title="Doris Zinkeisen" label="Doris Zinkeisen"/>
<link wikidata="Q4767637" start="3975" end="3979" title="Anna Zinkeisen" label="Anna"/>
<link wikidata="Q5172236" start="4120" end="4168" title="coronation of King George VI and Queen Elizabeth" label="coronation of King George VI and Queen Elizabeth"/>
<link wikidata="Q969196" start="4185" end="4211" title="Royal Photographic Society" label="Royal Photographic Society"/>
<link wikidata="Q46139" start="4914" end="4921" title="Man Ray" label="Man Ray"/>
<link wikidata="Q15429265" start="5257" end="5272" title="Edgar Middleton" label="Edgar Middleton"/>
<link wikidata="Q238587" start="6185" end="6218" title="National Portrait Gallery, London" label="National Portrait Gallery, London"/>
<link wikidata="Q7352856" start="6650" end="6670" title="Robin Warwick Gibson" label="Robin Warwick Gibson"/>
