<link wikidata="Q5075736" start="0" end="13" title="Charles Brady" label="Charles Brady"/>
<link wikidata="Q5075735" start="31" end="53" title="Charles Brady (artist)" label="Charles Brady (artist)"/>
<link wikidata="Q722667" start="102" end="123" title="Charles E. Brady, Jr." label="Charles E. Brady, Jr."/>
