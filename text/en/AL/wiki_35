<link wikidata="Q2877860" start="4657" end="4673" title="Hobart Cavanaugh" label="Hobart Cavanaugh"/>
<link wikidata="Q15485304" start="4713" end="4725" title="Harry Holman" label="Harry Holman"/>
<link wikidata="Q823422" start="4851" end="4873" title="National Film Registry" label="National Film Registry"/>
<link wikidata="Q1930063" start="4956" end="4980" title="Theatre Guild on the Air" label="Theatre Guild on the Air"/>
