<link wikidata="Q79" start="5697" end="5702" title="Egypt" label="Egypt"/>
<link wikidata="Q142" start="5743" end="5749" title="France" label="France"/>
<link wikidata="Q90" start="5926" end="5931" title="Paris" label="Paris"/>
<link wikidata="Q34428" start="5935" end="5950" title="Philip Augustus of France" label="Philip Augustus"/>
