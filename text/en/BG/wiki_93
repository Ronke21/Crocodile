<link wikidata="Q1019" start="65" end="75" title="Madagascar" label="Madagascar"/>
<link wikidata="None" start="754" end="768" title="Abila Lemaitso" label="Abila Lemaitso"/>
<link wikidata="Q474422" start="774" end="785" title="Brickaville" label="Brickaville"/>
<link wikidata="Q1321311" start="817" end="828" title="Nosy Bohara" label="Nosy Bohara"/>
<link wikidata="Q1390" start="948" end="955" title="insects" label="insects"/>
