<link wikidata="Q11536442" start="170" end="183" title="Nezu Kaichirō" label="Nezu Kaichirō"/>
<link wikidata="Q8134" start="226" end="235" title="economics" label="economics"/>
<link wikidata="Q80083" start="257" end="267" title="humanities" label="humanities"/>
