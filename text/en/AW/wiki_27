<link wikidata="Q778615" start="4647" end="4663" title="Machairodontinae" label="machairodontines"/>
<link wikidata="Q42602" start="4679" end="4686" title="Felinae" label="felines"/>
<link wikidata="Q230177" start="4691" end="4702" title="Pantherinae" label="pantherines"/>
<link wikidata="Q242125" start="4717" end="4726" title="phylogeny" label="phylogeny"/>
