<link wikidata="Q267131" start="102" end="111" title="Wafer (electronics)" label="substrate"/>
<link wikidata="Q2368605" start="144" end="151" title="Etching (microfabrication)" label="etchant"/>
<link wikidata="Q10251" start="202" end="208" title="Plasma (physics)" label="plasma"/>
<link wikidata="Q2927645" start="249" end="275" title="Buffered Oxide Etch" label="buffered hydrofluoric acid"/>
<link wikidata="Q116269" start="286" end="301" title="silicon dioxide" label="silicon dioxide"/>
