<link wikidata="Q6418141" start="36703" end="36712" title="kite line" label="kite line"/>
<link wikidata="Q770709" start="36914" end="36926" title="blunt trauma" label="blunt trauma"/>
<link wikidata="Q173603" start="36928" end="36934" title="Helmet" label="Helmet"/>
