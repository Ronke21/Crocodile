<link wikidata="Q22276503" start="6453" end="6474" title="Ugandan general election, 2016" label="2016 general election"/>
<link wikidata="Q57873" start="6647" end="6660" title="Amama Mbabazi" label="Amama Mbabazi"/>
<link wikidata="Q108265847" start="7026" end="7039" title="Apollo Ofwono" label="Apollo Ofwono"/>
