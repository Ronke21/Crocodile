# &quot;PDX: Love, God, Sex, and Cinema&quot;, (2001), 
# &quot;Lebensraum&quot;, (2002), 
# &quot;Eleven Months Early&quot;, (2003), 
# &quot;Once Removed&quot;, (2005), 
# &quot;Gina&quot;, (2007), 
