<link wikidata="Q5167849" start="60" end="78" title="Cooper vane" label="D.B. Cooper device"/>
<link wikidata="Q8424" start="96" end="107" title="aerodynamic" label="aerodynamic"/>
<link wikidata="Q131408" start="108" end="113" title="Wedge (mechanical device)" label="wedge"/>
<link wikidata="Q1055947" start="140" end="148" title="airstair" label="airstair"/>
