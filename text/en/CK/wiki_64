<link wikidata="Q3345485" start="4062" end="4099" title="Fundamental Rights of Indian citizens" label="Fundamental Rights of Indian citizens"/>
<link wikidata="None" start="4141" end="4157" title="Fundamental Rights, Directive Principles and Fundamental Duties of India#Right to Freedom" label="Right to Freedom"/>
<link wikidata="Q220596" start="4477" end="4490" title="Habeas corpus" label="Habeas corpus"/>
<link wikidata="Q5650645" start="4500" end="4515" title="Hans Raj Khanna" label="Hans Raj Khanna"/>
<link wikidata="Q230003" start="5113" end="5122" title="Lok Sabha" label="Lok Sabha"/>
<link wikidata="Q1486618" start="5643" end="5664" title="President&amp;#x27;s Rule" label="President&amp;#x27;s Rule"/>
<link wikidata="Q22424" start="6941" end="6947" title="Punjab, India" label="Punjab"/>
<link wikidata="Q66278313" start="6952" end="6969" title="Jammu and Kashmir (union territory)" label="Jammu and Kashmir"/>
