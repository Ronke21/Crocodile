<link wikidata="Q739" start="103" end="111" title="Colombia" label="Colombia"/>
<link wikidata="Q5878" start="120" end="142" title="Gabriel García Márquez" label="Gabriel García Márquez"/>
<link wikidata="Q34189" start="6280" end="6292" title="Pablo Neruda" label="Pablo Neruda"/>
<link wikidata="Q13474305" start="8731" end="8746" title="Francoist Spain" label="Francoist Spain"/>
