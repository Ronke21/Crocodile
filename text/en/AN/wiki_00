<link wikidata="Q1774998" start="7964" end="7983" title="The Reckless Moment" label="The Reckless Moment"/>
<link wikidata="Q3559142" start="8025" end="8045" title="East Side, West Side (1949 film)" label="East Side, West Side"/>
<link wikidata="Q94002" start="8064" end="8080" title="Barbara Stanwyck" label="Barbara Stanwyck"/>
