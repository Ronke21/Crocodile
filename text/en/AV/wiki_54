<link wikidata="Q978456" start="3997" end="4021" title="Intraflagellar transport" label="Intraflagellar transport"/>
<link wikidata="Q69631200" start="4023" end="4045" title="Chlamydomonas moewusii" label="Chlamydomonas moewusii"/>
<link wikidata="Q892808" start="4435" end="4459" title="Lake Bonney (Antarctica)" label="Lake Bonney (Antarctica)"/>
