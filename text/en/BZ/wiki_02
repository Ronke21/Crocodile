<link wikidata="Q2487060" start="155" end="160" title="Sokna, Libya" label="Sokna"/>
<link wikidata="Q5509435" start="202" end="208" title="Fuqaha, Libya" label="Fuqaha"/>
<link wikidata="Q188258" start="225" end="231" title="Fezzan" label="Fezzan"/>
