<link wikidata="Q6621727" start="34" end="45" title="list of glossing abbreviations" label="abbreviated"/>
<link wikidata="Q128234" start="53" end="69" title="grammatical case" label="grammatical case"/>
<link wikidata="Q397" start="153" end="158" title="Latin" label="Latin"/>
