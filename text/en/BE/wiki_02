<link wikidata="Q11220" start="5663" end="5681" title="United States Navy" label="United States Navy"/>
<link wikidata="Q4118479" start="5865" end="5891" title="Imperial Iranian Air Force" label="Imperial Iranian Air Force"/>
<link wikidata="Q794" start="5923" end="5927" title="Iran" label="Iran"/>
