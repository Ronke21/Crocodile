<link wikidata="Q23540" start="41" end="51" title="Protestant" label="Protestant"/>
<link wikidata="Q71" start="69" end="75" title="Geneva" label="Geneva"/>
<link wikidata="Q64" start="91" end="97" title="Berlin" label="Berlin"/>
