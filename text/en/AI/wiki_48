<link wikidata="Q1324888" start="96" end="101" title="frame (telecommunications)" label="frame"/>
<link wikidata="Q426882" start="119" end="131" title="clock signal" label="clock signal"/>
<link wikidata="Q1135914" start="162" end="167" title="Event-driven programming" label="event"/>
<link wikidata="Q7540801" start="250" end="254" title="Slip (telecommunication)" label="slip"/>
