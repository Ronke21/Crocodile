<link wikidata="Q1641516" start="62" end="65" title="Voice-operated switch" label="VOX"/>
<link wikidata="Q1641516" start="69" end="92" title="Voice-operated switch" label="voice-operated exchange"/>
<link wikidata="Q178127" start="310" end="329" title="push-to-talk operation" label="push-to-talk button"/>
