<link wikidata="Q8366" start="53" end="62" title="algorithm" label="algorithm"/>
<link wikidata="Q322212" start="82" end="109" title="travelling salesman problem" label="travelling salesman problem"/>
<link wikidata="Q13222579" start="1247" end="1258" title="Upper and lower bounds" label="lower bound"/>
</links>
