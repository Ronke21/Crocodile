<link wikidata="Q362396" start="59" end="77" title="frequency standard" label="frequency standard"/>
<link wikidata="Q272035" start="106" end="114" title="accuracy" label="accuracy"/>
<link wikidata="Q911470" start="159" end="185" title="primary standard" label="primary frequency standard"/>
<link wikidata="Q877055" start="217" end="235" title="crystal oscillator" label="crystal oscillator"/>
