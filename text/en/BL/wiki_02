<link wikidata="Q427626" start="65" end="79" title="taxonomic rank" label="taxonomic rank"/>
<link wikidata="Q767728" start="183" end="190" title="Variety (biology)" label="variety"/>
<link wikidata="Q279749" start="229" end="233" title="Form (botany)" label="form"/>
