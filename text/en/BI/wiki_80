<link wikidata="Q6642610" start="19" end="38" title="List of television reporters" label="television reporter"/>
<link wikidata="Q838121" start="59" end="86" title="George Foster Peabody Award" label="George Foster Peabody Award"/>
<link wikidata="Q123737" start="158" end="163" title="Emmys" label="Emmys"/>
