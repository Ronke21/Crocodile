<link wikidata="Q1969983" start="2835" end="2847" title="pushforward (differential)" label="differential"/>
<link wikidata="Q2520842" start="2966" end="2970" title="germ (mathematics)" label="germ"/>
<link wikidata="Q6188933" start="3006" end="3015" title="jet space" label="jet space"/>
<link wikidata="Q17295" start="3168" end="3183" title="Euclidean space" label="Euclidean space"/>
<link wikidata="Q141488" start="3277" end="3282" title="Graph (discrete mathematics)" label="graph"/>
<link wikidata="Q484298" start="3327" end="3334" title="Surface (topology)" label="surface"/>
<link wikidata="Q7832909" start="3473" end="3484" title="train track (mathematics)" label="train track"/>
<link wikidata="Q4956413" start="3990" end="4006" title="branched surface" label="branched surface"/>
