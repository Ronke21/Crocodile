<link wikidata="Q83309" start="50" end="67" title="Johann Strauss II" label="Johann Strauss II"/>
<link wikidata="Q5044124" start="145" end="153" title="Fasching" label="Fasching"/>
<link wikidata="Q51056" start="440" end="451" title="Franz Joseph I of Austria" label="Franz Josef"/>
