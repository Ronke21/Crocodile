<link wikidata="Q5430987" start="6664" end="6690" title="Fairy Queen (locomotive)" label="East Indian Railway No. 22"/>
<link wikidata="Q853110" start="6982" end="7010" title="Beyer, Peacock &amp;amp; Company" label="Beyer, Peacock &amp;amp; Company"/>
<link wikidata="Q990422" start="7091" end="7104" title="Entroncamento Municipality" label="Entroncamento"/>
<link wikidata="Q1335887" start="7150" end="7154" title="OKa1" label="OKa1"/>
<link wikidata="Q1311825" start="7175" end="7199" title="Railway Museum in Warsaw" label="Railway Museum in Warsaw"/>
