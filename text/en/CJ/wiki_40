<link wikidata="Q167420" start="71" end="79" title="Croats" label="Croatian"/>
<link wikidata="Q6186" start="80" end="89" title="communist" label="communist"/>
<link wikidata="Q155198" start="175" end="194" title="partisans (Yugoslavia)" label="partisan resistance"/>
