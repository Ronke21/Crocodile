<link wikidata="Q164081" start="205" end="215" title="Esgana Cão" label="Esgana Cão"/>
<link wikidata="Q1269612" start="383" end="386" title="Vinho do Dão" label="Dão"/>
<link wikidata="Q191034" start="424" end="433" title="port wine" label="port wine"/>
<link wikidata="Q14299" start="447" end="452" title="Douro" label="Douro"/>
