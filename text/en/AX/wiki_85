<link wikidata="Q35565" start="9609" end="9618" title="Tatars" label="Ta(r)tars"/>
<link wikidata="Q34266" start="9707" end="9721" title="Russian Empire" label="Russian Empire"/>
<link wikidata="Q186537" start="9766" end="9782" title="Khanate of Kazan" label="Khanate of Kazan"/>
