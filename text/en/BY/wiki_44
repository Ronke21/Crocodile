<link wikidata="Q2005" start="454" end="464" title="JavaScript" label="JavaScript"/>
<link wikidata="Q166074" start="606" end="611" title="XHTML" label="XHTML"/>
<link wikidata="Q8811" start="1108" end="1112" title="HTML" label="HTML"/>
<link wikidata="Q37045" start="1164" end="1179" title="markup language" label="markup language"/>
<link wikidata="Q2078" start="1244" end="1247" title="Scalable Vector Graphics" label="SVG"/>
<link wikidata="Q166074" start="1252" end="1257" title="XHTML" label="XHTML"/>
