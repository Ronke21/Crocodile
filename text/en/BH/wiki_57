<link wikidata="Q180634" start="69" end="88" title="distributed systems" label="distributed systems"/>
<link wikidata="Q752739" start="135" end="147" title="asynchronous communication" label="asynchronous"/>
<link wikidata="Q92613" start="192" end="206" title="Leslie Lamport" label="Leslie Lamport"/>
<link wikidata="Q6323607" start="211" end="225" title="K. Mani Chandy" label="K. Mani Chandy"/>
