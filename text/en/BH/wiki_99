<link wikidata="Q1063547" start="18858" end="18868" title="voice type" label="voice type"/>
<link wikidata="Q1785483" start="18871" end="18886" title="Contrapuntal motion" label="contrapuntalism"/>
<link wikidata="Q186393" start="18893" end="18905" title="counterpoint" label="counterpoint"/>
<link wikidata="Q1760322" start="19050" end="19060" title="soft pedal" label="soft pedal"/>
<link wikidata="None" start="19136" end="19145" title="#una corda" label="una corda"/>
<link wikidata="None" start="19159" end="19168" title="#tre corde" label="tre corde"/>
<link wikidata="Q5177128" start="19184" end="19189" title="Counting (music)" label="count"/>
<link wikidata="Q113558" start="19275" end="19284" title="crescendo" label="crescendo"/>
<link wikidata="None" start="19348" end="19358" title="Dynamics (music)#Gradual changes" label="diminuendo"/>
<link wikidata="Q6623445" start="19414" end="19435" title="List of horn techniques" label="French horn technique"/>
<link wikidata="Q249261" start="19793" end="19801" title="cut time" label="cut time"/>
<link wikidata="Q630649" start="19816" end="19821" title="meter (music)" label="meter"/>
