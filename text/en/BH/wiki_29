<link wikidata="Q179805" start="15948" end="15968" title="political philosophy" label="political philosophy"/>
<link wikidata="Q193034" start="16400" end="16421" title="Leviathan (Hobbes book)" label="&amp;quot;Leviathan&amp;quot;"/>
<link wikidata="Q193034" start="16801" end="16822" title="Leviathan (Hobbes book)" label="&amp;quot;Leviathan&amp;quot;"/>
