<link wikidata="Q1477735" start="675" end="703" title="short-time Fourier transform" label="short-time Fourier transform"/>
<link wikidata="Q194158" start="1260" end="1267" title="bitrate" label="bitrate"/>
<link wikidata="Q17020717" start="1486" end="1500" title="Hanning filter" label="Hanning filter"/>
<link wikidata="Q4819865" start="1935" end="1941" title="audio filter" label="filter"/>
<link wikidata="Q381287" start="1963" end="1974" title="white noise" label="white noise"/>
