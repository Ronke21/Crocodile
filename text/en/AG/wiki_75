<link wikidata="Q35438" start="44764" end="44782" title="The Jerusalem Post" label="The Jerusalem Post"/>
<link wikidata="Q6235420" start="45080" end="45089" title="John Ging" label="John Ging"/>
<link wikidata="Q1132126" start="45288" end="45304" title="Yedioth Ahronoth" label="Yedioth Ahronoth"/>
