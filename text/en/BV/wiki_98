<link wikidata="Q606149" start="114" end="134" title="Antonio di Benedetto" label="Antonio di Benedetto"/>
<link wikidata="Q414" start="214" end="223" title="Argentina" label="Argentine"/>
<link wikidata="Q1321" start="884" end="891" title="Spanish language" label="Spanish"/>
<link wikidata="Q5628189" start="895" end="908" title="H. E. Francis" label="H. E. Francis"/>
<link wikidata="None" start="931" end="949" title="Jorge García-Gómez" label="Jorge García-Gómez"/>
<link wikidata="Q853677" start="951" end="968" title="Grand Terrace, CA" label="Grand Terrace, CA"/>
<link wikidata="Q4945073" start="970" end="981" title="Xenos Books" label="Xenos Books"/>
