<link wikidata="Q155656" start="60" end="65" title="will (law)" label="wills"/>
<link wikidata="Q46737" start="101" end="106" title="asset" label="asset"/>
<link wikidata="Q181201" start="247" end="255" title="dividend" label="dividend"/>
<link wikidata="Q7315521" start="1887" end="1903" title="residuary estate" label="residuary estate"/>
</links>
