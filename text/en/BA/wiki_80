<link wikidata="Q866612" start="86" end="92" title="solder" label="solder"/>
<link wikidata="Q753" start="127" end="133" title="copper" label="copper"/>
<link wikidata="Q3241671" start="148" end="156" title="plumbing" label="plumbing"/>
<link wikidata="Q925477" start="281" end="291" title="steel wool" label="steel wool"/>
<link wikidata="Q1134475" start="310" end="314" title="Flux (metallurgy)" label="flux"/>
