<link wikidata="Q877977" start="45" end="53" title="Variable (computer science)" label="variable"/>
<link wikidata="Q2470517" start="59" end="65" title="record (computer science)" label="record"/>
<link wikidata="Q175263" start="93" end="107" title="data structure" label="data structure"/>
<link wikidata="Q40056" start="266" end="282" title="computer program" label="computer program"/>
<link wikidata="Q190087" start="468" end="476" title="data type" label="datatype"/>
<link wikidata="Q1183659" start="477" end="488" title="Declaration (computer programming)" label="declaration"/>
