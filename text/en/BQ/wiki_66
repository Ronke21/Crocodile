<link wikidata="Q12078" start="4350" end="4356" title="cancer" label="cancer"/>
<link wikidata="Q111952996" start="4401" end="4423" title="Halperin-Birk syndrome" label="Halperin-Birk syndrome"/>
<link wikidata="Q186521" start="4796" end="4805" title="threonine" label="threonine"/>
<link wikidata="Q131896729" start="4847" end="4864" title="dominant negative" label="dominant negative"/>
<link wikidata="Q21111963" start="5027" end="5031" title="COPI" label="COPI"/>
