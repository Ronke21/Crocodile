<link wikidata="Q7131794" start="464" end="493" title="Panther Intaglio Effigy Mound" label="Panther Intaglio Effigy Mound"/>
<link wikidata="Q1570350" start="516" end="540" title="Fort Atkinson, Wisconsin" label="Fort Atkinson, Wisconsin"/>
<link wikidata="Q2460316" start="618" end="634" title="Blythe Intaglios" label="Blythe Intaglios"/>
