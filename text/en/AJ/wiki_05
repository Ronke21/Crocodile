<link wikidata="Q20019920" start="0" end="3" title="UÇK" label="UÇK"/>
<link wikidata="Q193366" start="21" end="43" title="Kosovo Liberation Army" label="Kosovo Liberation Army"/>
<link wikidata="Q2296614" start="54" end="78" title="National Liberation Army (Macedonia)" label="National Liberation Army"/>
