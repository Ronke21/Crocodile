<link wikidata="Q143666" start="776" end="785" title="toothcomb" label="toothcomb"/>
<link wikidata="Q851554" start="789" end="800" title="toilet-claw" label="toilet-claw"/>
<link wikidata="Q20685841" start="965" end="973" title="Adapinae" label="Adapinae"/>
